{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist/"
  },
  "compileOnSave": true,
  "globalName": "$",
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
